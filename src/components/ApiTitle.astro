---
import type { Props } from "@astrojs/starlight/props";
const data = Astro.props.entry.data as any;
---

<div class="header-container">
  {
    data.method && (
      <div class:list={["title-badge", data.method]}>{data.method}</div>
    )
  }
  <h1 id="_top" class="title-title">{data.title}</h1>
</div>

<style>
  h1 {
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .header-container {
    margin-top: 1rem;
    display: flex;
    align-items: flex-end;
    gap: 1rem;
  }

  .title-title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .title-badge {
    min-width: fit-content;
    height: fit-content;
    font-size: var(--sl-text-h4);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    border-radius: 0.5rem;
    border: 1px solid;
    padding: 0.35rem 0.5rem;
  }

  .GET {
    background-color: var(--sl-badge-note-bg);
    border-color: var(--sl-badge-note-border);
    color: var(--sl-badge-note-text);
  }

  .POST {
    background-color: var(--sl-badge-success-bg);
    border-color: var(--sl-badge-success-border);
    color: var(--sl-badge-success-text);
  }

  .DELETE {
    background-color: var(--sl-badge-danger-bg);
    border-color: var(--sl-badge-danger-border);
    color: var(--sl-badge-danger-text);
  }
</style>
